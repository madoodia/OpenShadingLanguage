{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "build",
      "windows": {
        "command": "${workspaceFolder}/build_scripts/vscode_release_build.bat",
      },
      "linux": {
        "command": "${workspaceFolder}/build_scripts/vscode_release_build.sh",
      },
      "osx": {
        "command": "${workspaceFolder}/build_scripts/vscode_release_build.sh",
      },
      "args": [
        "${workspaceFolder}",
        "${relativeFileDirname}",
        "${fileBasenameNoExtension}"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
  ]
}